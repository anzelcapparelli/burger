<h1>Eat-Da-Burger!</h1>

<h2>Burger Queue</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> cats/cat-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> cats/cat-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
